<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2" />

    <property name="now" value="current_timestamp" dbms="postgresql" />

    <property name="floatType" value="float4" dbms="postgresql, h2" />
    <property name="floatType" value="float" dbms="mysql, oracle, mssql" />

    <changeSet id="20180126141725-0" author="arte">
        <createSequence sequenceName="seq_tb_ficheros" startValue="1" incrementBy="50" />
    </changeSet>
    
    <changeSet id="20180126141725-1" author="arte">
        <createTable tableName="tb_ficheros">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="datos" type="longblob">
                <constraints nullable="false" />
            </column>
            <column name="tipo_contenido" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="nombre" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="longitud" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>